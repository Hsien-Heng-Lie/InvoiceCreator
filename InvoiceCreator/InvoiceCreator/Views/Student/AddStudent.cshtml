@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="add-student-wrapper">
        
            
        @using (Html.BeginForm("AddStudent", "Student",FormMethod.Post))
        { 
            <div class="section">
            <h5>Sudent Information</h5>
            <!--<form>-->
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input required type="text" id="FirstName" name="FirstName" placeholder="e.g. John" />
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input required type="text" id="LastName" name="LastName" placeholder="e.g. Doe" />
                </div>
                <div class="form-group">
                    <label for="gradGroupYear">Grad Group Year</label>
                    <input required type="number" id="GradYear" name="GradYear" value="2023" placeholder="e.g. 2023" />
                </div>
            <!--</form>-->
        </div>

        <div class="section">
            <!--<form>-->
                <label for="email"><h5>Student Email</h5></label>
                <input required type="email" id="email" name="Email" placeholder="e.g. johnd@bbd.co.za" />
            <!--</form>-->
        </div>

        <button type="submit" class="submit-btn">Submit</button>
        }
        
    </div>
</div>
